# Backend Configuration - Copy this to .env file

# Django Settings
DEBUG=True
SECRET_KEY=your-insecure-secret-key-for-development-only

# Allowed Hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Database URL (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# CORS Configuration (Allow frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (Console backend for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# SMS Gateway (Optional - for future integration)
SMS_GATEWAY_API_KEY=your-sms-api-key
SMS_GATEWAY_SENDER_ID=SchoolMS

# Payment Gateway (Optional - for fee payments)
PAYMENT_GATEWAY_KEY=your-payment-key
PAYMENT_GATEWAY_SECRET=your-payment-secret

# Security (Set to True in production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
